h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25
  // &:hover .header-anchor
  //   opacity: 1

h1
  font-size 2.2rem

h2
  font-size 1.65rem
  padding-bottom 0.3rem
  border-bottom 1px solid $borderColor

h3
  font-size 1.35rem

hr
  border 0
  border-top 1px solid $borderColor

img
  max-width 100%
  
a
  font-weight 500
  color $accentColor
  text-decoration none
  border-bottom 2px solid transparent
  transition color 0.2s ease, border-color 0.2s ease
  &:hover
    border-bottom-color $accentColor

a.header-anchor
  display none
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0
  &:hover
    text-decoration none

p a code
  font-weight 400
  color $accentColor

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size .9rem
  color #999
  border-left .5rem solid #dfe2e5
  margin 0.5rem 0
  padding .25rem 0 .25rem 1rem
  & > p
    margin 0

ul, ol
  padding-left 1.2em

strong
  font-weight 600

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p, ul, ol
  line-height 1.7

table
  border-collapse collapse
  margin 1rem 0
  display: block
  overflow-x: auto

tr
  border-top 1px solid #dfe2e5
  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

/* Override VuePress */
.icon.outbound
  display none !important

.content__default code
  color: #476582;
  padding: .25rem .5rem;
  margin: 0;
  font-size: .85em;
  background-color: rgba(27,31,35,.05);
  border-radius: 3px;

/* Override Prism */
div[class*="language-"]
  background #f8f8f8 !important
  &:before 
    color #ccc !important
  &:after
    border-right 1px solid #EEE !important
    background #f8f8f8 !important
  .line-numbers-wrapper
    color #ccc !important
  pre[class*="language-"]
    background transparent !important
    code 
      background transparent !important
      color $textColor !important
      span
        background transparent !important

